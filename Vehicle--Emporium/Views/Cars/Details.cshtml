@model Vehicle__Emporium.Models.Cars

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="container">
    <h1 class="my-4">
        @Model.year @Model.vehicleModel  @Model.vehicleMake
        <small>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</small>
        <small>$@Model.price</small>
    </h1>
    <div class="row">
        <div class="col-md-8">
            <img class="col" src="@("~/Images/" + @Model.ImageUpload + ".jpeg")" asp-append-version="true" width="650" height="400" />
        </div>

        <div class="col" style="font-size: 1.2em;">
            
            
            <div><b>@Html.DisplayNameFor(model => model.vehicleMake)</b></div>
            <div>@Html.DisplayFor(model => model.vehicleMake)<br /></div>
                <div><b>@Html.DisplayNameFor(model => model.vehicleModel)</b></div>
                <div>@Html.DisplayFor(model => model.vehicleModel)</div>
            <div><b>@Html.DisplayNameFor(model => model.year)</b></div>
            <div>@Html.DisplayFor(model => model.year)<br /></div>
            <div><b>@Html.DisplayNameFor(model => model.miles)</b></div>
            <div> @Html.DisplayFor(model => model.miles)<br /></div>
            <div><b>@Html.DisplayNameFor(model => model.mpg)</b></div>
            <div>@Html.DisplayFor(model => model.mpg)<br /></div>
            <div><b>@Html.DisplayNameFor(model => model.condition)</b></div>
            <div>@Html.DisplayFor(model => model.condition)<br /></div>
            <div><b>@Html.DisplayNameFor(model => model.price)</b></div>
            <div>$@Html.DisplayFor(model => model.price)<br /></div>

        </div>
        <div class="col" style="font-size: 1.2em;">
            <div><b>@Html.DisplayNameFor(model => model.carType)</b></div>
            <div>@Html.DisplayFor(model => model.carType)<br /></div>
            <div><b>@Html.DisplayNameFor(model => model.fuelCapcity)</b></div>
            <div>@Html.DisplayFor(model => model.fuelCapcity)<br /></div>
        </div>
        <div style="font-size: 1.2em;">
        <b>@Html.DisplayNameFor(model => model.description)</b>
        @Html.DisplayFor(model => model.description)<br />
        </div>    
    </div>
    <div>
        <br/> <br/> <br/>
        <a asp-action="Edit" asp-route-id="@Model?.vehicleID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>








